<%= stylesheet_link_tag 'projects' %>
<div class="box">
<h1>Projetos</h1>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Início</th>
        <th>Fim</th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td>
            <%= link_to project.name, project %>
          </td>
          <td><%= project.description %></td>
          <td><%= project.begin.strftime('%d/%m/%Y') %></td>
          <td><%= project.end.strftime('%d/%m/%Y') %></td>
          <%# <td><%= link_to 'Edit', edit_project_path(project) </td> %>
          <%# <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } </td> %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div class="button-container">
    <%= link_to 'Novo projeto', new_project_path, class: 'btn btn-outline-primary' %>
  </div>
</div>
